# MetaTrader Python Framework Environment Configuration
# Copy this file to .env and configure your settings

# Application Settings
APP_NAME=MetaTrader Python Framework
APP_VERSION=2.0.0
ENVIRONMENT=development  # development, testing, production
DEBUG=true
LOG_LEVEL=INFO

# MetaTrader 5 Connection Settings
MT5_ENABLED=true
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server
MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe
MT5_TIMEOUT=60000

# Database Configuration
DATABASE_URL=sqlite:///data/trading.db
DATABASE_ECHO=false  # Set to true for SQL debugging
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Logging Configuration
LOG_FILE_PATH=logs/application.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=structured  # structured, json, simple

# Trading Settings
TRADING_ENABLED=false  # Set to true only when ready for live trading
RISK_MANAGEMENT_ENABLED=true
MAX_RISK_PER_TRADE=0.02  # 2% per trade
MAX_DAILY_RISK=0.10      # 10% per day
MAX_OPEN_POSITIONS=5

# Strategy Settings
STRATEGY_CONFIG_PATH=config/strategies.yaml
INDICATORS_CONFIG_PATH=config/indicators.yaml
PATTERNS_CONFIG_PATH=config/patterns.yaml

# Market Data Settings
DATA_PROVIDER=mt5  # mt5, yahoo, alpha_vantage
DATA_CACHE_ENABLED=true
DATA_CACHE_TTL=300  # seconds
HISTORICAL_DATA_DAYS=365

# GUI Settings
GUI_ENABLED=true
GUI_THEME=dark  # dark, light
GUI_LANGUAGE=hu  # hu, en
GUI_UPDATE_INTERVAL=1000  # milliseconds

# API Settings
API_ENABLED=false
API_HOST=127.0.0.1
API_PORT=8000
API_SECRET_KEY=your-secret-key-here

# Notification Settings
NOTIFICATIONS_ENABLED=false
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=your_email@gmail.com

# Telegram Bot Settings
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Performance Settings
ASYNC_WORKERS=4
THREAD_POOL_SIZE=8
MEMORY_LIMIT=1GB

# Security Settings
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-here
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Development Settings
PROFILING_ENABLED=false
METRICS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily  # hourly, daily, weekly
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=data/backups/

# External Data Providers (optional)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
YAHOO_FINANCE_ENABLED=false
QUANDL_API_KEY=your_quandl_key

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Time Zone
TIME_ZONE=Europe/Budapest