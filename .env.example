# Environment Variables Template
# Copy this file to .env and fill in your actual values

# MT5 Connection
MT5_ACCOUNT_NUMBER=12345678
MT5_ACCOUNT_PASSWORD=YourPasswordHere
MT5_SERVER=YourBrokerServer

# Database (if encryption is needed)
DATABASE_ENCRYPTION_KEY=YourEncryptionKeyHere

# Email Notifications (optional)
SMTP_EMAIL_ADDRESS=your-email@example.com
SMTP_EMAIL_PASSWORD=YourEmailPasswordHere
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# API Keys (for future integrations)
# TELEGRAM_BOT_TOKEN=YourTelegramBotToken
# DISCORD_WEBHOOK_URL=YourDiscordWebhookURL

# System Configuration
PYTHON_ENV=development
LOG_LEVEL=INFO
