{
  "services": [
    {
      "name": "data-service",
      "port": 5001,
      "path": "../data-service",
      "command": "python main.py",
      "auto_start": true,
      "restart_on_failure": true,
      "health_endpoint": "/health"
    },
    {
      "name": "mt5-service",
      "port": 5002,
      "path": "../mt5-service",
      "command": "python main.py",
      "auto_start": true,
      "restart_on_failure": true,
      "health_endpoint": "/health"
    },
    {
      "name": "strategy-service",
      "port": 5003,
      "path": "../strategy-service",
      "command": "python main.py",
      "auto_start": true,
      "restart_on_failure": true,
      "health_endpoint": "/health"
    },
    {
      "name": "pattern-service",
      "port": 5004,
      "path": "../pattern-service",
      "command": "python main.py",
      "auto_start": false,
      "restart_on_failure": true,
      "health_endpoint": "/health"
    }
  ],
  "health_check": {
    "interval_seconds": 5,
    "timeout_seconds": 2,
    "startup_timeout_seconds": 30,
    "max_restart_attempts": 3,
    "restart_backoff_seconds": 5
  }
}
